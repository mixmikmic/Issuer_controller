      <input type="Attribute" class="form-control" id="Attribute" placeholder="Attribute list eg. a,b,c" name="attributes">
    </div>
  </div>
    <div class="form-group  row">
    <label for="version" class="col-sm-2 col-form-label">version</label>
    <div class="col-sm-10">
      <input type="form" class="form-control" id="version" placeholder="eg. 1.0" name="schema_version">
    </div>
  </div>

                </div>       
            </div>

          <div class="col-6">

               

                <div class="form-group">
  <div class="form-group  row">

    <div class="col-sm-10 ml-3">
      <input type="checkbox"  class="form-check-input" id="revocCheck" name="revocation" >
<label class="" for="flexCheckDisabled">
  revocation
  </label>
    </div>
  </div>


  <div class="form-group row">
    <label for="Attribute" class="col-sm-2 col-form-label">revocation size</label>
    <div class="col-sm-10">
      <input type="Attribute" class="form-control" id="size" name="size" value="1000" disabled>
    </div>
  </div>
 

  

       
</div>


         </div>




